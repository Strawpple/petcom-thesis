<!DOCTYPE html>
<html>
  <header>
    
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    
  </header>
  <body>
    <div class="main-content">
      <!--Start of NavBar-->

      <section
        class="vh-100"
        style="background-color: #eee"
      >
        <div class="container h-100">
          <div
            class="row d-flex justify-content-center align-items-center h-100"
          >
            <div class="col-lg-12 col-xl-11">
              <div
                class="card text-black"
                style="border-radius: 25px"
              >
                <div class="card-body p-md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                      <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                        Sign up
                      </p>
                      

                      <form
                        method="POST"
                        action="/registrationform"
                        class="mx-1 mx-md-4"
                      >
                        <!-- Account Type -->
                        <select
                          class="form-select"
                          aria-label="Default select example"
                          name="data_selected"
                        >
                          <option value="Personal">Personal</option>
                          <option value="Shelter">
                            Establishment - Shelter
                          </option>
                          <option value="Veterinary">
                            Establishment - Veterinary Clinic
                          </option>
                          <option value="Petshop">
                            Establishment - Petshop
                          </option>
                        </select>
                        <label
                          class="form-label"
                          for="last_name"
                          style="margin-bottom: 20px; margin-left: 2px"
                          >Account Type</label
                        >

                        <div class="d-flex flex-row align-items-center mb-4">
                          <div class="form-outline flex-fill mb-0">
                            <input
                              type="text"
                              id="first_name"
                              name="addfirstname"
                              class="form-control"
                              required
                            />
                            <label
                              class="form-label"
                              for="first_name"
                              >First Name</label
                            >
                          </div>
                          <div
                            class="form-outline flex-fill mb-0"
                            style="margin-left: 10px"
                          >
                            <input
                              type="text"
                              id="last_name"
                              name="addlastname"
                              class="form-control"
                            />
                            <label
                              class="form-label"
                              for="last_name"
                              >Last Name</label
                            >
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-phone"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input
                              type="text"
                              id="contact"
                              name="addcontact"
                              class="form-control"
                              maxlength="11"
                              pattern="[0-9]+"
                              placeholder="09123456789"
                              required
                            />
                            <label
                              class="form-label"
                              for="contact"
                              >Contact</label
                            >
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-map-marked"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input
                              type="text"
                              id="address"
                              name="addaddress"
                              class="form-control"
                              required
                            />
                            <label
                              class="form-label"
                              for="address"
                              >Address</label
                            >
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                          <div class="form-outline flex-fill mb-0">
                            <select
                              class="form-select"
                              aria-label="Default select example"
                              name="accountcity"
                              required
                            >
                              <% for(var index = 0; index <
                              listofprovinces.length; index++){ %>
                              <option
                                value="<%= listofprovinces[index]['name'] %>"
                              >
                                <%= listofprovinces[index]['name'] %>
                              </option>
                              <% } %>
                            </select>
                            <label
                              class="form-label"
                              for="address"
                              >City or Province</label
                            >
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                          <div class="form-outline flex-fill mb-0">
                            <input
                              type="email"
                              id="email"
                              name="addemail"
                              class="form-control"
                              required
                            />
                            <label
                              class="form-label"
                              for="email"
                              >Your Email</label
                            >
                            <div id='result'></div>
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                          <div class="form-outline flex-fill mb-0">
                            <input
                              type="password"
                              id="password"
                              name="addpass"
                              class="form-control"
                              required
                            />

                            <input
                              type="checkbox"
                              onclick="Toggle()"
                            />
                            <label
                              class="form-label"
                              for="password"
                              >Show Password</label
                            >
                          </div>
                        </div>

                        <div
                          class="form-check d-flex justify-content-center mb-5"
                        >
                          <input
                            class="form-check-input me-2"
                            type="checkbox"
                            value=""
                            id="form2Example3c"
                          />
                          <label
                            class="form-check-label"
                            for="form2Example3"
                          >
                            I agree all statements in
                            <a href="#!">Terms of service</a>
                          </label>
                        </div>

                        <div
                          class="d-flex justify-content-center mx-4 mb-3 mb-lg-4"
                        >
                          <input
                            type="submit"
                            class="btn btn-primary btn-lg"
                            value="Register"
                            id='validate'
                          />
                          <a
                            type="button"
                            style="margin-left: 50px"
                            class="btn btn-primary btn-lg"
                            href="index-login-page"
                            >Back</a
                          >
                        </div>
                      </form>
                    </div>
                    <div
                      class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2"
                    >
                      <img
                        src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                        class="img-fluid"
                        alt="Sample image"
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <script>
      function Toggle() {
        var temp = document.getElementById("password");
        if (temp.type === "password") {
          temp.type = "text";
        } else {
          temp.type = "password";
        }
      }
    </script>
    <script>
      function validateEmail(email) {
        let res = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
        return res.test(email);
      }
      function validate() {
        let result = $("#result");
        let email = $("#email").val();
        result.text("");
        if(validateEmail(email)) {
          result.text(email + " is valid");
          result.css("color", "blue");
        } else {
          result.text(email + " is not valid");
          result.css("color", "red");
        }
        return false;
      }
      $("#validate").on("click", validate);
    </script>
  </body>
</html>
